{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build"
    },
    {
      "src": "./website/package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
    { "src": "/book", "status": 302, "headers": { "Location": "/book/introduction.html" } },
    { "src": "/book/(.*)", "dest": "/book/$1" },

    { "src": "/typedoc", "status": 302, "headers": { "Location": "/typedoc/index.html" } },
    { "src": "/typedoc/(.*)", "dest": "/typedoc/$1" },

    { "src": "/(.*)", "dest": "/website/$1" }
  ]
}
