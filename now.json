{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/node"
    },
    {
      "src": "./website/package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
    { "src": "/.*", "dest": "./website/package.json" },
    { "src": "/book/.*", "dest": "package.json" }
  ]
}
