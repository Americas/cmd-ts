{
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"],
      "*": ["*"]
    },
    "target": "es5",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "./next-env.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./components/**/*.tsx",
    "./pages/**/*.tsx",
    "./pages/api/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
